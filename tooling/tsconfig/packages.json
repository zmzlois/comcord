{
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "build",
        "strict": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}